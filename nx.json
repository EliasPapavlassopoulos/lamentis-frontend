{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "lamentis-frontend",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "lint", "test"],
        "parallel": 4,
        "cacheDirectory": ".nx/cache"
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"],
      "cache": true
    },
    "test": {
      "inputs": ["default", "^production"],
      "cache": true
    }
  },
  "namedInputs": {
    "production": ["{workspaceRoot}/package.json", "{projectRoot}/src/**/*.ts", "!{projectRoot}/src/**/*.spec.ts"],
    "default": ["{workspaceRoot}/package.json", "{projectRoot}/src/**"]
  },
  "defaultProject": "lamentis-frontend",
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "libs"
  },
  "projects": {
    "lamentis-frontend": {
      "tags": []
    }
  }
}
